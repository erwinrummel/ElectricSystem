<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_shape">

            <include
                android:id="@+id/include_patrol_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_patrol_plan_top"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shape_dash_line"
            android:layerType="software"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_shape_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_text_grey"
                    android:textSize="10sp"
                    android:text="编制单位：编制单位名称"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_grey"
                    android:textSize="10sp"
                    android:text="编制人：名称"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_text_grey"
                    android:textSize="10sp"
                    android:text="编制时间：2018/09/21"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_grey"
                    android:textSize="9sp"
                    android:text="变电站名称"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_grey"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="17dp"
                    android:textSize="9sp"
                    android:text="200V"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_grey"
                android:layout_marginTop="21dp"/>

            <LinearLayout
                android:id="@+id/ll_patrol_content_type"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_grey_bottom_corner"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_text_black"
                    android:textSize="12sp"
                    android:text="状态"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#62C0B6"
                    android:textSize="12sp"
                    android:text="查看详情"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>

