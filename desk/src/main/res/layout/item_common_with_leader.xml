<layout xmlns:android="http://schemas.android.com/apk/res/android">K
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_shadow_frame"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_common_next_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_text_black"
            android:text="巡视计划名称"/>

        <LinearLayout
            android:layout_width="143dp"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_team_member_background"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_team_member_title"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_team_member_title"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_team_member_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>


    </LinearLayout>
</layout>

